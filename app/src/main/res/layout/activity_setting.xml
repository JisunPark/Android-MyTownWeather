<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.suminjin.mytownweather.SettingActivity">

    <TextView
        style="@style/SettingTitle"
        android:layout_marginTop="10dp"
        android:text="위치 선택하기" />

    <TextView
        android:id="@+id/textView2"
        style="@style/SettingContents"
        android:onClick="onClickLocal"
        android:text="@string/select_location" />

    <TextView
        style="@style/SettingContents"
        android:onClick="onClickSearch"
        android:text="@string/seacrh_current_location" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:text="현위치를 검색할 경우 경우에 따라 시간이 지연될 수 있습니다."
        android:textSize="10sp" />

</LinearLayout>
